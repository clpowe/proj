---
import { Icon } from 'astro-icon/components'

const naveData = [
	{
		title: 'Projects',
		href: '/projects'
	},
	{
		title: 'Home',
		href: '/',
		icon: 'logomark'
	},
	{
		title: 'Writings',
		href: '/blog'
	}
]
---

<nav>
	<ul>
		{
			naveData.map((i) => (
				<li>
					<a href={i.href} aria-label={i.icon && i.title}>
						{i.icon && <Icon name={i.icon} size={48} aria-hidden='true' />}
						{!i.icon && i.title}
					</a>
				</li>
			))
		}
	</ul>
</nav>
